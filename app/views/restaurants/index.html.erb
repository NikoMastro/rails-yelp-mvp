<div class="cards mb-4" style="width: 18rem;">
  <% @restaurants.each do |restaurant| %>
    <img class="card-img-top" src="https://loremflickr.com/320/240/<%=["italian","german","american","french","belgium","spanish"].sample%>_restaurant" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%=restaurant.name%></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Address:<%=restaurant.address%></li>
      <li class="list-group-item">Phone Number:<%=restaurant.phone_number%></li>
      <li class="list-group-item"><%=restaurant.category%></li>
    </ul>
    <div class="card-body">
      <%= link_to restaurant.name, restaurant_path(restaurant)%>
    </div>
  <% end %>
</div>
